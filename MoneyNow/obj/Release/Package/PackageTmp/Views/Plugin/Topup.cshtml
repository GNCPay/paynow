@{
    Layout = null;
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="panel-title text-center">Nạp tiền di động</div>
    </div>
    <div class="panel-body">
        <form id="form" class="send-form form-horizontal">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
                <select id="amount" class="form-control">
                    <option>50,000 VNĐ</option>
                    <option>100,000 VNĐ</option>
                    <option>200,000 VNĐ</option>
                    <option>500,000 VNĐ</option>
                </select>
            </div>

            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-heart"></i></span>
                <input id="message" type="text" class="form-control" name="message" placeholder="Số di động">
            </div>
            <div class="form-group">
                <!-- Button -->
                <div class="col-sm-12 controls">
                    <button type="button" id="btn-confirm" href="#" class="btn btn-primary pull-right"><i class="glyphicon glyphicon-ok-sign"></i> Tiếp</button>
                </div>
            </div>
        </form>
    </div>
</div>
